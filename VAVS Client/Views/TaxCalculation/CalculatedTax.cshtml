@model VAVS_Client.Classes.TaxpayerInfo

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "CalculatedTax";
}

<div style="background-color: #3c90c3ed;" class="row mt-2 border border-dark">
    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-black"> အခွန်ထမ်းမည့်သူအချက်အလက် </label>
    </div>
</div>

<div class="row mt-1 border border-dark">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-2" style="background-color: #c0c0c052;">
            <label asp-for="Name" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="Name" value="@Model.Name" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
        <div class="row p-2">
            <label asp-for="PhoneNumber" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="PhoneNumber" value="@Model.PhoneNumber" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
        <div class="row p-2" style="background-color: #c0c0c052;">
            <label asp-for="HousingNumber" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="HousingNumber" value="@Model.HousingNumber" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-2" style="background-color: #c0c0c052;">
            <label asp-for="NRC" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="NRC" value="@Model.NRC" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
        <div class="row p-2">
            <label asp-for="Street" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="Street" value="@Model.Street" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
        <div class="row p-2" style="background-color: #c0c0c052;">
            <label asp-for="Quarter" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="Quarter" value="@Model.Quarter" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
    </div>
</div>

<div style="background-color: #3c90c3ed;" class="row mt-2 border border-dark">
    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-black"> မော်တော်ယာဥ်အချက်အလက် </label>
    </div>
</div>

<div class="row mt-1 border border-dark">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-2" style="background-color: #c0c0c052;">
            <label asp-for="BuildType" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="BuildType" value="@Model.BuildType" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
        <div class="row p-2">
            <label asp-for="ModelYear" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="ModelYear" value="@Model.ModelYear" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
        <div class="row p-2 style=" background-color: #c0c0c052;"">
            <label asp-for="FuelType" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="FuelType" value="@Model.FuelType" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-2" style="background-color: #c0c0c052;">
            <label asp-for="VehicleBrand" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="VehicleBrand" value="@Model.VehicleBrand" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
        <div class="row p-2">
            <label asp-for="EnginePower" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                <input type="text" asp-for="EnginePower" value="@Model.EnginePower" readonly="" style="background-color: inherit;border: none;">
            </div>
        </div>
    </div>
</div>

<div class="row p-2 mt-2" style="background-color: #5dc38e52;">
    <label class="fw-bold col-lg-3 col-md-6 col-sm-4 control-label">ကျသင့်ငွေခွန်စုစုပေါင်း</label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        <input type="text" asp-for="TotalTax" value="@Model.TotalTax" readonly="" style="background-color: inherit;border: none;">
    </div>
</div>

<div class="d-flex justify-content-center align-item-center mt-2">
    <button class="btn btn-outline-primary" type="submit" style="border-radius: 50px;">Confirm</button>
</div>