@model VAVS_Client.Models.VehicleStandardValue

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "TaxCalculation";
}
<div>
    <form method="post" action="@Url.Action("ShowCalculatedTaxForm", "TaxCalculation")" enctype="multipart/form-data">
        <div class="row mt-1 border border-dark" style="border-radius: 20px;background-color: #bbc9ef78;">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-2">
                    <label class="control-label"> REG.NO: </label>
                    <div class="col">
                        <input class="form-control" asp-for="VehicleNumber" value="@Model.VehicleNumber" readonly />
                    </div>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="control-label"> Type: </label>
                    <input class="form-control" asp-for="BuildType" value="@Model.BuildType" readonly />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="control-label"> EP: </label>
                    <input class="form-control" asp-for="EnginePower" value="@Model.EnginePower" readonly />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="control-label"> M_Year: </label>
                    <input class="form-control" asp-for="ModelYear" value="@Model.ModelYear" readonly />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="control-label"> Contract Price: </label>
                    <div class="">
                        <!--<div class="input-group-append">
                            <span class="input-group-text">သိန်း</span>
                        </div>-->
                        <input id="price" type="text" class="form-control mb-1" name="ContractPrice" pattern="[0-9]*" title="Please enter digits only" onkeyup="myanmarNumToWord.convertToBurmeseWords(this)" required>
                        <span id="currencyToBurmeseWord" style="border-radius: 50px; color: royalblue; display: none; font-weight: bold; background-color: #98ac9b47"></span>
                        <!--<div class="input-group-append">
                            <select id="select-unit" name="unit" disabled>
                                <option value="">-</option>
                                <option value="1">ခု</option>
                                <option value="10">ဆယ်</option>
                                <option value="100">ရာ</option>
                                <option value="1000">ထောင်</option>
                                <option value="10000">သောင်း</option>
                            </select>
                        </div>-->
                    </div>
                </div>
                <div class="row p-2">
                    <label class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label">သန်းခေါင်စာရင်းပုံ</label>
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <input type="file" asp-for="CensusImageFile" accept=".jpg, .jpeg, .png" required>
                    </div>
                </div>
                <div class="row p-2">
                    <label class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label">ကား Owner book ပုံ</label>
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <input type="file" asp-for="OwnerBookImageFile" accept=".jpg, .jpeg, .png" required>
                    </div>
                </div>
                <div class="row p-2">
                    <label class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label">ကားမော်တော်ယာဥ်ပုံ</label>
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <input type="file" asp-for="VehicleImageFile" accept=".jpg, .jpeg, .png" required>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="form-group mt-2">
                    <label class="control-label"> ManufacturerL: </label>
                    <input class="form-control" asp-for="Manufacturer" value="@Model.Manufacturer" readonly />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="control-label"> MAKE_MODEL: </label>
                    <input class="form-control" asp-for="VehicleBrand" value="@Model.VehicleBrand" readonly />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="control-label"> ENGINE_NO: </label>
                    <input class="form-control" value="-" readonly />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="control-label"> FUEL: </label>
                    <input class="form-control" asp-for="Fuel.FuelType" value="@Model.Fuel.FuelType" readonly />
                    <span class="text-danger"></span>
                </div>
                
                <div class="form-group mt-2">
                    <label class="control-label"> Asset Tax: </label>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text">သိန်း</span>
                        </div>
                        <input type="text" class="form-control" asp-for="StandardValue" value="@Model.StandardValue" readonly>
                        <div class="input-group-append">
                            <span class="input-group-text">Kyat</span>
                        </div>
                    </div>
                </div>
                <div class="row p-2">
                    <label class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label">အရောင်းအဝယ်စာချုပ်ပုံ</label>
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <input type="file" asp-for="TransactionContractImageFile" accept=".jpg, .jpeg, .png" required>
                    </div>
                </div>
                <div class="row p-2">
                    <label class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label">ယာဥ်သက်သေခံလက်မှတ် / Wheel tag ပုံ</label>
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <input type="file" asp-for="WheelTagImageFile" accept=".jpg, .jpeg, .png" required>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center align-item-center mt-3 mb-2">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
