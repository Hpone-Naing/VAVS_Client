@model VAVS_Client.ViewModels.LoginView
@{
    Layout = "_AuthLayout";
}
<!--Register -->
<div class="authentication-inner">
<div class="card">
    <div class="card-body">

        @if (TempData.ContainsKey("Message") && TempData.ContainsKey("CssColor"))
        {
            @if (TempData.ContainsKey("Option"))
            {
                @if (TempData["Option"] != null && TempData["Option"].Equals("true"))
                {
                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            var myModal = new bootstrap.Modal(document.getElementById('alertModel'));
                            myModal.show();
                        });
                    </script>
                }
                else if (TempData["Option"] != null && TempData["Option"].Equals("createForm"))
                {
                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            var myModal = new bootstrap.Modal(document.getElementById('staticBackdrop'));
                            myModal.show();
                        });
                    </script>
                }
                else
                {
                    <div class="alert @TempData["CssColor"] text-center alert-msg" role="alert">
                        @TempData["Message"]
                    </div>
                }
            }
        }

        <div class="d-flex justify-content-center align-item-center">
            <h4>Welcome To</h4>
        </div>
        <!-- Logo -->
        <div class="d-flex align-item-center justify-content-center">
            <a asp-controller="Login" asp-action="Index" class="app-brand-link gap-2">
                <span class="app-brand-text demo text-body fw-bolder">VAVS Client</span>
            </a>
        </div>
        <div class="app-brand justify-content-center">
            <a asp-controller="Login" asp-action="Index" class="app-brand-link gap-2">
                <span class="app-brand-logo demo">
                    <img src="~/Content/images/MADBIMG.jpg" width="90px;" />
                </span>
            </a>
        </div>
        <!-- /Logo -->
        <form class="mb-3" action="@Url.Action("LoginUser", "Login")" method="post">
            <div class="form-group mt-2">
                    <label class="control-label">ရွေးချယ်ပါ</label>
                <div class="form-check mt-2" style="background-color: #dfedf28f;padding-top: 10px;padding-bottom: 10px;border-top-left-radius: 10px;border-bottom-right-radius:20px;">
                        <input class="form-check-input" type="radio" name="flexRadioDefault">
                        <label class="form-check-label" for="flexRadioDefault1">
                            ပိုင်ရှင်ကိုယ်တိုင်
                        </label>
                    </div>
                <div class="form-check mt-2 mb-3" style="background-color: #dfedf28f;padding-top: 10px;padding-bottom: 10px;border-top-left-radius: 10px;border-bottom-right-radius:20px;">
                        <input class="form-check-input" type="radio" name="flexRadioDefault">
                        <label class="form-check-label" for="flexRadioDefault2">
                            ကိုယ်စားလှယ်
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary d-grid w-100" type="submit">Submit</button>
                </div>
            </form>
    </div>
</div>
</div>
<!-- /Register -->


